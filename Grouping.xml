<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParabankSuite_Groups" parallel="false">

  <!-- ExtentReports Listener -->
  <listeners>
    <listener class-name="utils.ExtentReportManager"/>
  </listeners>

  <!-- Smoke Tests -->
  <test name="SmokeTests">
    <groups>
      <run>
        <include name="smoke"/>
      </run>
    </groups>
    <classes>
      <class name="testCase.TC01_Register"/>
      <class name="testCase.TC02_login"/>
    </classes>
  </test>

  <!-- Regression Tests -->
  <test name="RegressionTests">
    <groups>
      <run>
        <include name="regression"/>
      </run>
    </groups>
    <classes>
      <class name="testCase.TC03_OpenNewAccount"/>
      <class name="testCase.TC04_AccountOverview"/>
      <class name="testCase.TC05_Transferfund"/>
      <class name="testCase.TC06_Billpayment"/>
      <class name="testCase.TC08_Updatecontact"/>
    </classes>
  </test>

</suite>
